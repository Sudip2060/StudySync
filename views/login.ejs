<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
    <link rel="stylesheet" href="/others/styles.css">
</head>

<body>
    <div class="login-top">
        <div id="logo-div">
            <img src="/images/logo.png" class="logo-img">
        </div>
        <div id="signup-div">
            <button type="button" id="signup-button">Sign up</button>
        </div>
    </div>
    <div class="login-header">
        <h1>login</h1>
    </div>
    <div class="login-form">
        <form>
            <div class="form-row">
                <input type="text" class="username-box" placeholder="username">
            </div>
            <div class="form-row">
                <input type="text" class="password-box" placeholder="password">
            </div>
            <div class="form-row">
                <button type="button" id="signin-button">Sign in</button>
            </div>
            <div class="reset-password">
                <P class="rstpwd">reset password</P>
            </div>
        </form>
    </div>
</body>
</html>

<script>
    document.getElementById('signup-button').onclick=function(){
        window.location.href='/signup'
    }
</script>